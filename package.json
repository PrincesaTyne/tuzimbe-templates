{
  "name": "tuzimbe-templates",
  "version": "1.0.0",
  "description": "Tuzimbe is a construction site app for people to keep track of workers and building material at their construction sites.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "build:css": "npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PrincesaTyne/tuzimbe-templates.git"
  },
  "author": "Justine Nakitto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PrincesaTyne/tuzimbe-templates/issues"
  },
  "homepage": "https://github.com/PrincesaTyne/tuzimbe-templates#readme",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.7",
    "eslint": "^7.32.0",
    "eslint-loader": "^4.0.2",
    "htmlnano": "^1.1.1",
    "imagemin-cli": "^7.0.0",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.0.1",
    "posthtml": "^0.16.5",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.7.4",
    "stylelint": "^14.0.1",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "bootstrap": "^5.1.3"
  }
}
